# ===== FRONTEND ENVIRONMENT CONFIGURATION (TEMPLATE) =====
# Copy this file to .env and .env.production and update values

# ===== API CONFIGURATION =====
# Production Backend URL
VITE_API_URL=https://bank-back-production-e058.up.railway.app

# Development Backend URL
# VITE_API_URL=http://localhost:5000

# ===== APP CONFIGURATION =====
VITE_APP_NAME=Money Withdrawal System
VITE_APP_VERSION=1.0.0

# ===== FEATURE FLAGS =====
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_BANK_TRANSFERS=true
VITE_ENABLE_MPESA=true

# ===== AMOUNT LIMITS (in KES) =====
VITE_MIN_AMOUNT=100
VITE_MAX_AMOUNT=1000000

# ===== PAYMENT GATEWAYS =====
VITE_PAYMENT_METHODS=stripe,flutterwave
VITE_DEFAULT_PAYMENT_METHOD=flutterwave

# ===== STRIPE PUBLIC KEY =====
# This is safe to expose (public key only)
VITE_STRIPE_PUBLIC_KEY=pk_test_YOUR_KEY_HERE
